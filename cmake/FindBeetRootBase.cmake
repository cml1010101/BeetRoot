function(ADD_BEETROOT_MODULE ADD_BEETROOT_MODULE_NAME)
    cmake_parse_arguments(ADD_BEETROOT_MODULE "" "" "SOURCES;PRIVATE_INCLUDE_DIRS;PUBLIC_INCLUDE_DIRS;REQUIREMENTS" ${ARGN})
    add_library(${ADD_BEETROOT_MODULE_NAME} STATIC ${ADD_BEETROOT_MODULE_SOURCES})
    target_include_directories(${ADD_BEETROOT_MODULE_NAME} PRIVATE ${ADD_BEETROOT_MODULE_PRIVATE_INCLUDE_DIRS})
    target_include_directories(${ADD_BEETROOT_MODULE_NAME} PRIVATE ${ADD_BEETROOT_MODULE_PUBLIC_INCLUDE_DIRS})
    target_link_libraries(${ADD_BEETROOT_MODULE_NAME} PUBLIC ${ADD_BEETROOT_MODULE_REQUIREMENTS})
    foreach(REQUIREMENT IN ITEMS ${ADD_BEETROOT_MODULE_REQUIREMENTS})
        target_include_directories(${ADD_BEETROOT_MODULE_NAME} PUBLIC $<TARGET_PROPERTY:${REQUIREMENT},INCLUDE_DIRECTORIES>)
    endforeach()
endfunction(ADD_BEETROOT_MODULE)